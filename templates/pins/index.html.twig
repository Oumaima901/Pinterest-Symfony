{% extends 'layouts/base.html.twig' %}

{% block title %}Find all the best pins on earth
{% endblock %}

{% block body %}
	<h1>{{ pluralize(2 ,'Pin','Pins') }}
	</h1>
	{% for pin in pins %}
		<article>
			<h2><a href="{{ path ('app_pins_show', {id: pin.id})}}">{{ pin.title }}</a></h2>
			<p>{{ pin.description |u.truncate(8 ,'....', true) }}</p>
            <p> Submitted {{ pin.createdAt|ago }} </p>

		</article>


	{% endfor %}
{% endblock %}
