{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}


{% block body %}
<div class="row">
<div class="col-md-6 mx-auto">
	<article class="bg-white rounded shadow">
		<div class="mw-100 rounded-top overflow-hidden">
		<a href="{{ path ('app_pins_show', {id: pin.id})}}">
				<img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('images/1.jpg')) | imagine_filter('my_fixed_filter') }}" alt="{{ pin.title }}" class="w-100 rounded-top"/>
		
		</a>
		</div>
			<h2 class="h5 pl-3 pt-3"><a class="text-secondary text-decoration-none" href="{{ path ('app_pins_show', {id: pin.id})}}">{{ pin.title }}</a></h2>
		
		<small>
			 Submitted
			 <time datetime="{{pin.createdAt|date('Y-m-d H:i:s') }}"> 
			 {{ pin.createdAt|ago }}</time>
			  by [OWNER FULL NAME]
			 </small> </p>
			 <p class="pl-3 pb-3">
			 {{ pin.description }}
             </p>
			 <div class="pl-3 pb-3">
			 <a class="btn btn-light" href="{{ path('app_pins_edit', {id: pin.id}) }}">Edit</a>
		 <a class="btn btn-light" href="#" onclick="event.preventDefault(); confirm('Are you sure') && document.getElementById('js-pin-delete-form').submit();">Delete</a>
        
	<form id="js-pin-delete-form" action="{{ path('app_pins_delete',{id: pin.id} ) }}"  method="post" style="display:
	none;">

	<input type="hidden" name="_method" value="DELETE">
	
	</form>
			 </div>
		</article>

	
        


</div>
</div>
	
 
{% endblock %}
